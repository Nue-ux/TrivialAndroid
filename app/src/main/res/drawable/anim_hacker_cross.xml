<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/ic_hacker_cross">

    <!-- primera diagonal -->
    <target android:name="line1">
        <objectAnimator
            android:propertyName="trimPathEnd"
            android:duration="300"
            android:valueFrom="0"
            android:valueTo="1"
            android:valueType="floatType"/>
    </target>

    <!-- segunda diagonal, empieza cuando la primera termina -->
    <target android:name="line2">
        <objectAnimator
            android:startOffset="300"
            android:propertyName="trimPathEnd"
            android:duration="300"
            android:valueFrom="0"
            android:valueTo="1"
            android:valueType="floatType"/>
    </target>

    <!-- parpadeo hacker -->
    <target android:name="line1">
        <objectAnimator
            android:startOffset="600"
            android:propertyName="strokeAlpha"
            android:duration="450"
            android:repeatCount="2"
            android:repeatMode="reverse"
            android:valueFrom="1"
            android:valueTo="0.4"
            android:valueType="floatType"/>
    </target>
    <target android:name="line2">
        <objectAnimator
            android:startOffset="600"
            android:propertyName="strokeAlpha"
            android:duration="450"
            android:repeatCount="2"
            android:repeatMode="reverse"
            android:valueFrom="1"
            android:valueTo="0.4"
            android:valueType="floatType"/>
    </target>
</animated-vector>
