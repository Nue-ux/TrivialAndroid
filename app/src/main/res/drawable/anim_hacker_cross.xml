<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_hacker_cross">

    <!-- diagonal 1 -->
    <target android:name="line1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="300"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"/>
        </aapt:attr>
    </target>

    <!-- diagonal 2 -->
    <target android:name="line2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:startOffset="300"
                android:propertyName="trimPathEnd"
                android:duration="300"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"/>
        </aapt:attr>
    </target>

    <!-- parpadeo -->
    <target android:name="line1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:startOffset="600"
                android:propertyName="strokeAlpha"
                android:duration="450"
                android:repeatCount="2"
                android:repeatMode="reverse"
                android:valueFrom="1"
                android:valueTo="0.4"
                android:valueType="floatType"/>
        </aapt:attr>
    </target>
    <target android:name="line2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:startOffset="600"
                android:propertyName="strokeAlpha"
                android:duration="450"
                android:repeatCount="2"
                android:repeatMode="reverse"
                android:valueFrom="1"
                android:valueTo="0.4"
                android:valueType="floatType"/>
        </aapt:attr>
    </target>
</animated-vector>
